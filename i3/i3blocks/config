# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
command=$I3BLOCKS_SCRIPT_DIR/$BLOCK_NAME/$BLOCK_NAME
separator_block_width=15
markup=none

[volume-pulseaudio]
interval=persist
signal=1
markup=pango
# for some reason you do have to NOT include `"` for strings with pango
LONG_FORMAT=${SYMB} ${VOL}%
SHORT_FORMAT=${SYMB} ${VOL}%
AUDIO_HIGH_SYMBOL=
AUDIO_MED_THRESH=50
AUDIO_MED_SYMBOL=
AUDIO_LOW_THRESH=0
AUDIO_LOW_SYMBOL=
AUDIO_MUTED_SYMBOL=
DEFAULT_COLOR=#ffffff
MUTED_COLOR=#a0a0a0
AUDIO_DELTA=5
SUBSCRIBE=1

[memory]
label= 
interval=5

[wifi]
INTERFACE=wlp1s0
label= 
interval=10
separator=false

[bandwidth]
interval=5
INLABEL= 
OUTLABEL= 

[cpu_usage]
label=CPU 
interval=1

[load_average]
label= 
interval=10

[battery2]
markup=pango
interval=5

[xkb_layout]
interval=persist
markup=pango

[time]
command=date '+%Y-%m-%d %H:%M:%S '
interval=1


